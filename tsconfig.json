{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/*"
      ]
    }
  },
  "include":[ "src/**/*" ],
  "exclude":[ "node_modules" ]
}